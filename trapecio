print("CALCULAR EL AREA DEL TRAPECIO")
a = int(input("ingrese el lado a: "))
b = int(input("ingrese el lado b: "))
h = int(input("ingrese la altura: "))
area= (a+b)*h/2
print(f"El area del trapecio es: {area}")

print("CALCULAR EL PERIMETRO DEL TRAPECIO")
a = int(input("ingrese el lado a: "))
b = int(input("ingrese el lado b: "))
c = int(input("ingrese el lado c: "))
d = int(input("ingrese el lado d: "))
perim= a+b+c+d
print(f"El perimetro del trapecio es: {perim}")